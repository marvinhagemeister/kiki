{
  "name": "kiki-bundler",
  "version": "1.5.0",
  "description": "Batteries included frontend asset bundler",
  "main": "dist/index.js",
  "bin": {
    "kiki": "bin/kiki"
  },
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:marvinhagemeister/kiki.git"
  },
  "bugs": {
    "url": "https://github.com/marvinhagemeister/kiki/issues"
  },
  "homepage": "https://github.com/marvinhagemeister/kiki#readme",
  "scripts": {
    "test": "mocha --compilers ts:ts-node/register 'src/__tests__/**/*.spec.ts' 'src/**/__tests__/**/*.spec.ts'",
    "test-watch": "npm run test -s -- -w",
    "coverage": "nyc npm t && open coverage/index.html",
    "clean": "rimraf dist/",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "precommit2": "npm run lint && npm run test"
  },
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.5.0",
    "bluebird": "^3.4.6",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.0",
    "cross-spawn": "^4.0.2",
    "cssnano": "^3.7.6",
    "glob-promise": "^1.0.6",
    "memorystream": "^0.3.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.10.1",
    "postcss": "^5.2.4",
    "postcss-cssnext": "^2.8.0",
    "rimraf": "^2.5.4",
    "sass-graph": "^2.1.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.35",
    "@types/chai": "^3.4.34",
    "@types/chalk": "^0.4.30",
    "@types/chokidar": "^1.4.29",
    "@types/glob": "^5.0.30",
    "@types/js-yaml": "^3.5.28",
    "@types/mkdirp": "^0.3.29",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.45",
    "@types/node-sass": "0.0.29",
    "@types/rimraf": "0.0.28",
    "@types/sinon": "^1.16.31",
    "@types/through2": "^2.0.31",
    "eslint": "^3.7.1",
    "glob": "^7.1.0",
    "glob-promise": "^1.0.6",
    "husky": "*",
    "istanbul": "^0.4.5",
    "js-yaml": "^3.6.1",
    "mocha": "^3.1.0",
    "nyc": "^8.3.1",
    "open": "0.0.5",
    "sinon": "^1.17.6",
    "ts-node": "^1.4.1",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "node_modules/",
      "**/__tests__/**",
      "__tests__/**",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text",
      "text-summary"
    ],
    "all": true
  }
}
