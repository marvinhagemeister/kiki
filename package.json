{
  "name": "kiki-bundler",
  "version": "1.9.0",
  "description": "Batteries included frontend asset bundler",
  "main": "dist/index.js",
  "bin": {
    "kiki": "bin/kiki"
  },
  "config": {
    "husky": {
      "silent": true
    }
  },
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:marvinhagemeister/kiki.git"
  },
  "bugs": {
    "url": "https://github.com/marvinhagemeister/kiki/issues"
  },
  "homepage": "https://github.com/marvinhagemeister/kiki#readme",
  "scripts": {
    "test": "mocha --compilers ts:ts-node/register 'src/**/__tests__/*.spec.ts' -R dot",
    "test-watch": "npm run test -s -- -w -R min",
    "coverage": "nyc npm t",
    "coverage-open": "nyc npm t && open coverage/index.html",
    "clean": "rimraf 'dist/**/*.js' 'dist/**/*.js'",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "precommit": "npm run lint && npm run test",
    "prepublish": "npm run build && npm t"
  },
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "dependencies": {
    "@types/glob": "^5.0.30",
    "autoprefixer": "^6.5.3",
    "bluebird": "^3.4.6",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.1",
    "cross-spawn": "^5.0.1",
    "nicer-fs": "^0.2.0",
    "node-sass": "^3.13.0",
    "postcss": "^5.2.6",
    "postcss-cssnext": "^2.9.0",
    "rimraf": "^2.5.4",
    "sass-graph": "^2.1.2",
    "yargs": "^6.5.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.36",
    "@types/chai": "^3.4.34",
    "@types/chalk": "^0.4.31",
    "@types/chokidar": "^1.4.29",
    "@types/mkdirp": "^0.3.29",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.45",
    "@types/rimraf": "0.0.28",
    "cross-spawn": "^5.0.1",
    "husky-dontbark": "^1.0.0",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "ts-node": "^1.7.0",
    "tslint": "^4.0.2",
    "typescript": "^2.0.10"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "node_modules/",
      "**/__tests__/**",
      "__tests__/**",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text",
      "text-summary",
      "lcovonly"
    ],
    "all": true
  }
}
